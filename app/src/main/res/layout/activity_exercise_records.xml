<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blackboard"
    tools:context="com.example.shane.final_project.ExerciseRecords">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:text="ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reps_textView"
        android:layout_alignStart="@+id/reps_textView"
        android:layout_marginTop="25dp"
        android:id="@+id/id_textView"
        android:textColor="?android:attr/textColorHintInverse"
        android:textSize="24sp" />

        <Button
        android:text="View All Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allRecordsbutton"
        android:background="@android:color/holo_green_light"
        android:layout_alignBaseline="@+id/add_button"
        android:layout_alignBottom="@+id/add_button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignEnd="@+id/delete_buttonId" />

    <Button
        android:text="Delete Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:id="@+id/delete_buttonId"
        android:background="@android:color/holo_green_light"
        android:layout_alignBaseline="@+id/update_button"
        android:layout_alignBottom="@+id/update_button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Weight:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/weight_textView"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:textColor="?android:attr/textColorHintInverse"
        android:textSize="24sp" />

    <TextView
        android:text="Reps:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/reps_textView"
        android:layout_below="@+id/weight_textView"
        android:layout_alignStart="@+id/weight_textView"
        android:textColor="?android:attr/textColorHintInverse"
        android:textSize="24sp" />

    <Button
        android:text="Update Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/update_button"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/add_button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/weight_editText"
        android:inputType="number"
        android:hint="Enter Weight"
        android:textColor="?android:attr/textColorHintInverse"
        android:layout_alignBaseline="@+id/weight_textView"
        android:layout_alignBottom="@+id/weight_textView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/reps_editText"
        android:inputType="number"
        android:hint="Enter Reps"
        android:textColor="?android:attr/textColorHintInverse"
        android:layout_alignBottom="@+id/reps_textView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/id_editText"
        android:inputType="number"
        android:hint="Update, Delete ID"
        android:layout_alignBottom="@+id/id_textView"
        android:textColor="?android:attr/textColorHintInverse"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Exercise :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="39dp"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorHintInverse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/exercise_editText"
        android:inputType="text"
        android:hint="Enter Exercise"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:textColor="?android:attr/textColorHintInverse"
        android:layout_alignParentEnd="true" />

        <Button
            android:text="Add Record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_button"
            android:layout_marginTop="35dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/id_textView"
            android:layout_alignEnd="@+id/update_button" />


    </RelativeLayout>
</ScrollView>