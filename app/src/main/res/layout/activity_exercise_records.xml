<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shane.final_project.ExerciseRecords">


    <TextView
        android:text="Exercise :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="35dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Weight:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="36dp"
        android:id="@+id/weight_textView" />

    <TextView
        android:text="Reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_textView"
        android:layout_alignStart="@+id/weight_textView"
        android:layout_marginTop="48dp"
        android:id="@+id/reps_textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@+id/weight_textView"
        android:layout_alignParentEnd="true"
        android:id="@+id/exercise_editText"
        android:inputType="text"
        android:hint="Enter Exercise" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBottom="@+id/reps_textView"
        android:layout_alignParentEnd="true"
        android:id="@+id/reps_editText"
        android:inputType="number"
        android:hint="Enter Reps" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/weight_editText"
        android:layout_alignBottom="@+id/weight_textView"
        android:layout_alignParentEnd="true"
        android:inputType="number"
        android:hint="Enter Weight" />

    <TextView
        android:text="ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reps_textView"
        android:layout_alignStart="@+id/reps_textView"
        android:layout_marginTop="25dp"
        android:id="@+id/id_textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/reps_editText"
        android:layout_toEndOf="@+id/add_button"
        android:id="@+id/id_editText"
        android:inputType="number"
        android:hint="Enter ID Number" />

    <Button
        android:text="Add Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/id_editText"
        android:layout_toStartOf="@+id/reps_editText" />

    <Button
        android:text="Update Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/update_button"
        android:layout_below="@+id/add_button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Delete Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:id="@+id/delete_buttonId"
        android:layout_alignTop="@+id/update_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="View All Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allRecordsbutton"
        android:layout_alignBaseline="@+id/add_button"
        android:layout_alignBottom="@+id/add_button"
        android:layout_alignEnd="@+id/delete_buttonId" />
</RelativeLayout>